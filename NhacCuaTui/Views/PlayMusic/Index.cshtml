                                    <font color=#7a7a7a>@a[0]</font>
                                </div>
                                <div class="new-info">
                                    @if (a[2].Length >= 17)
                                    {
                                        <p><a href="~/PlayMusic/Index?id=@a[1]" class="title-item">@a[2].Substring(0, 17) <i>...</i></a></p>
                                    }
                                    else
                                    {
                                        <p><a href="~/PlayMusic/Index?id=@a[1]" class="title-item">@a[2]</a></p>
