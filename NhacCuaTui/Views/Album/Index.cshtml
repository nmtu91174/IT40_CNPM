@using System.Collections
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Album";
    ArrayList albums = ViewBag.Albums ?? new ArrayList();
}

<style>
    .album-container {
        padding: 20px 0;
    }

    .album-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .album-header h1 {
        font-size: 36px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .album-search-filter {
        display: flex;
        gap: 15px;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }

    .album-search-filter input,
    .album-search-filter select {
        padding: 10px 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
    }

    .album-search-filter input {
        flex: 1;
        min-width: 200px;
    }

    .album-search-filter select {
        min-width: 150px;
    }

    .album-search-filter button {
        padding: 10px 25px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 600;
        transition: transform 0.2s;
    }

    .album-search-filter button:hover {
        transform: scale(1.05);
    }

    .album-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }

    .album-card {
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
    }

    .album-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .album-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .album-info {
        padding: 15px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .album-name {
        font-size: 16px;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .album-artist {
        font-size: 13px;
        color: #666;
        margin-bottom: 8px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .album-year {
        font-size: 12px;
        color: #999;
        margin-bottom: 10px;
    }

    .album-song-count {
        font-size: 12px;
        color: #667eea;
        font-weight: 600;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #999;
    }

    .empty-state i {
        font-size: 48px;
        margin-bottom: 20px;
        color: #ddd;
    }

    .empty-state p {
        font-size: 16px;
    }

    @@media (max-width: 768px) {
        .album-grid {
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 15px;
        }

        .album-header h1 {
            font-size: 28px;
        }

        .album-search-filter {
            flex-direction: column;
        }

        .album-search-filter input,
        .album-search-filter select {
            width: 100%;
        }
    }
</style>

<div class="container">
    <div class="album-container">
        <div class="album-header">
            <h1><i class="fas fa-compact-disc"></i> Album</h1>
            <p>Khám phá các album yêu thích của bạn</p>
        </div>

        <div class="album-search-filter">
            <form method="get" action="/Album/Index" style="display: flex; gap: 15px; flex: 1; flex-wrap: wrap;">
                <input type="text" name="searchAlbum" placeholder="Tìm kiếm theo tên album..." value="@ViewBag.SearchAlbum" style="flex: 1; min-width: 200px;">
                <select name="filterGenre" style="min-width: 150px;">
                    <option value="">-- Tất cả thể loại --</option>
                    @if (ViewBag.Genres != null)
                    {
                        foreach (string genre in ViewBag.Genres)
                        {
                            <option value="@genre" selected="@(ViewBag.FilterGenre == genre)">@genre</option>
                        }
                    }
                </select>
                <select name="filterYear" style="min-width: 120px;">
                    <option value="">-- Năm phát hành --</option>
                    @for (int year = DateTime.Now.Year; year >= 2000; year--)
                    {
                        <option value="@year" selected="@(ViewBag.FilterYear == year.ToString())">@year</option>
                    }
                </select>
                <button type="submit">
                    <i class="fas fa-search"></i> Tìm kiếm
                </button>
            </form>
        </div>

        @if (albums.Count > 0)
        {
            <div class="album-grid">
                @foreach (ArrayList album in albums)
                {
                    if (album.Count >= 5)
                    {
                        int albumId = Convert.ToInt32(album[0]);
                        string albumName = album[1]?.ToString() ?? "Không xác định";
                        string artistNames = album[2]?.ToString() ?? "Không xác định";
                        string releaseYear = album[3]?.ToString() ?? "N/A";
                        string thumbnailImage = album[4]?.ToString() ?? "default.jpg";
                        string songCount = album.Count > 5 ? album[5]?.ToString() ?? "0" : "0";

                        <a href="/Album/Detail?id=@albumId" class="album-card">
                            <img src="~/Source/Albums-Image/@thumbnailImage" alt="@albumName" class="album-image" onerror="this.src='~/assets/images/placeholder.jpg'">
                            <div class="album-info">
                                <div class="album-name" title="@albumName">@albumName</div>
                                <div class="album-artist" title="@artistNames">@artistNames</div>
                                <div class="album-year">@releaseYear</div>
                                <div class="album-song-count">
                                    <i class="fas fa-music"></i> @songCount bài hát
                                </div>
                            </div>
                        </a>
                    }
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div>
                    <i class="fas fa-compact-disc"></i>
                    <p>Không tìm thấy album nào</p>
                </div>
            </div>
        }
    </div>
</div>
